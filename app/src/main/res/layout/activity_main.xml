<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView

        android:layout_height="40dp"
        android:text="Type and run"
        style = "@style/arrangements" />

    <TextView
        style = "@style/arrangements"
        android:layout_height="30dp"
        android:text="Make"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etName"
        style = "@style/arrangements"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        style = "@style/arrangements"
        android:layout_height="30dp"
        android:text="Year"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/etYear"
        style = "@style/arrangements"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        style = "@style/arrangements"
        android:layout_height="30dp"
        android:text="Colour"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/etColour"
        style = "@style/arrangements"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        style = "@style/arrangements"
        android:layout_height="30dp"
        android:text="Purchase price(pound)"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/etPrice"
        style = "@style/arrangements"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        style = "@style/arrangements"
        android:layout_height="30dp"
        android:text="Engine size(litre)"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/etEngineSize"
        style = "@style/arrangements"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/bButton1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Create Car" />

    <Button
        android:id="@+id/bButton2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Create Diseal"
        android:layout_marginLeft="130dp"/>
</LinearLayout>
    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="241dp"
        android:layout_height="115dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:scrollbars="vertical"
        android:background="@color/colorPrimary"/>
    </ScrollView>

</LinearLayout>
</ScrollView>